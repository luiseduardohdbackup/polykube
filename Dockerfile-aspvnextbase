FROM    ubuntu:latest
ENV     HOME /root

RUN     apt-get -qq update && apt-get -qqy install curl unzip build-essential

RUN     curl http://download.mono-project.com/repo/xamarin.gpg > /tmp/xamarin.gpg && \
        apt-key add /tmp/xamarin.gpg && \
        echo "deb http://download.mono-project.com/repo/debian wheezy main" > /etc/apt/sources.list.d/mono-xamarin.list

RUN     apt-get -qq update && apt-get -qqy install mono-complete

RUN     mozroots --import --sync

RUN     curl https://raw.githubusercontent.com/aspnet/Home/master/kvminstall.sh > /root/kvminstall.sh && \
        sh /root/kvminstall.sh && \
        bash -c "source ~/.kre/kvm/kvm.sh && kvm upgrade"
