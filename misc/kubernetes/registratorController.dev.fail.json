{
    "id": "staticController",
    "kind": "ReplicationController",
    "apiVersion": "v1beta1",
    "desiredState": {
        "replicas": 1,
        "replicaSelector": {"name": "static"},
        "podTemplate": {
            "desiredState": {
                "manifest": {
                    "version": "v1beta1",
                    "id": "staticController",
                    "containers": [
                        {
                            "name": "registrator",
                            "image": "progrium/registrator",
                            "command": "etcd://10.0.0.2:4001/blah",
                            "env": [
                                {
                                    "key": "DOCKER_HOST",
                                    "value": "unix:///mnt/host/var/run/docker.sock"
                                }
                            ],
                            "volumeMounts": [
                                {
                                    "name": "varrun",
                                    "mountPath": "/mnt/host/var/run",
                                    "readOnly": true
                                }
                            ]
                        }
                    ],
                    "volumes": [
                        {
                            "name": "varrun",
                            "source": { "hostDir": { "path": "/var/run" } }
                        }
                    ]
                }
            },
            "labels": {"name": "static"}
        }},
    "labels": {"name": "static"}
}
