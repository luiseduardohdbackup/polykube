{
    "id": "staticController",
    "kind": "ReplicationController",
    "apiVersion": "v1beta1",
    "desiredState": {
        "replicas": 1,
        "replicaSelector": {"name": "static"},
        "podTemplate": {
            "desiredState": {
                "manifest": {
                    "version": "v1beta1",
                    "id": "staticController",
                    "containers": [
                        {
                            "name": "static",
                            "image": "localhost:5000/polykube/static",
                            "ports": [{ "containerPort": 80, "hostPort": 30000 }],
                            "env": [
                                { "key": "SERVICE_NAME", "value": "static" }
                            ]
                        }
                    ]
                }
            },
            "labels": {"name": "static"}
        }},
    "labels": {"name": "static"}
}
