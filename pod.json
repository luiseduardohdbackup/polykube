{
    "id": "main_pod",
    "kind": "Pod",
    "apiVersion": "v1beta1",
    "desiredState": {
        "manifest": {
            "version": "v1beta1",
            "id": "main_pod",

            "containers": [{
                "name": "docker_repo",
                "image": "docker/docker-registry",
                "ports": [{
                    "containerPort": 6000
                }],
                "env": [{
                    "SETTINGS_FLAVOR": "dev"
                }],
                "livenessProbe": {
                    "enabled": true,
                    "type": "http",
                    "initialDelaySeconds": 30,
                    "httpGet": {
                        "path": "/example",
                        "port": "80"
                    }
                }
            },
            {
                "name": "agora_api",
                "image": "agora_api",
                "ports": [{
                    "containerPort": 5000,
                    "hostPort": 8080
                }],
                "livenessProbe": {
                    "enabled": true,
                    "type": "http",
                    "initialDelaySeconds": 180,
                    "httpGet": {
                        "path": "/example",
                        "port": "80"
                    }
                }
            }]
        }
    },
    "labels": {
        "name": "foo"
    }
}
